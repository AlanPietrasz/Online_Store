<!-- navigationbar.js -->
<div class="nav-bar">
    <a href="/">Home Page</a>
    <a href="/shop">Shop</a>
    <a href="/leaderboard">Leaderboard</a>
    <% if (!locals.user) { %>
        <a href="/signup">Sign Up</a>
        <a href="/login">Log in</a>
    <% } else { %>
        <a href="/moneymaker">Moneymaker</a>
        <div class="dropdown">
            <button class="dropbtn">Account</button>
            <div class="dropdown-content">
                <div class="centered-div">
                    <%= locals.user %>
                </div>
                <a href="/account">My Account</a>
                <a href="/logout">Log Out</a>
            </div>
        </div>
        <div class="nav-bar-div">
            <%= locals.user %>
        </div>
    <% } %>
    <% if (locals.user && locals.userRoles && locals.userRoles.includes('user')) { %>
        <a href="/cart">Cart</a>
    <% } %>
</div>